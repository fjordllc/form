doctype html
html
  head
    title
      | Form
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_pack_tag 'application'
  body
    - if logged_in?
      ul
        li= link_to "トップ", root_path
        li= link_to "ログアウト", logout_path, method: :delete
    - flash.each do |flash_key, value|
      - key = nil
      - key = "info" if flash_key == "notice"
      - key = "danger" if flash_key == "alert"
      = content_tag :div, value, class: "alert alert-#{key} mt-3", role: "alert" if key
    = yield
